{
    "manifest_version": 3,
    "name": "Find and Replace",
    "version": "1.0",
    "description": "Finds and replaces text in the source HTML of a tab",
    "permissions": ["scripting", "tabs", "activeTab"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content_script.js"]
      }
    ]
  }
  